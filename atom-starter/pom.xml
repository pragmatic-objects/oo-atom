<?xml version="1.0" encoding="UTF-8"?>
<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
    <modelVersion>4.0.0</modelVersion>
    <parent>
        <!--
        @todo #1 this reference to parent project causes unintended inheritance of oo-atom profiles. Need to eliminate them.
        -->
        <groupId>oo</groupId>
        <artifactId>oo-atom</artifactId>
        <version>0.0.0-SNAPSHOT</version>
    </parent>
    <artifactId>atom-starter</artifactId>
    <packaging>pom</packaging>

    <repositories>
        <repository>
            <snapshots>
                <enabled>false</enabled>
            </snapshots>
            <id>bintray-skapral-oo-maven</id>
            <name>bintray</name>
            <url>http://dl.bintray.com/skapral/oo-maven</url>
        </repository>
    </repositories>
    <pluginRepositories>
        <pluginRepository>
            <snapshots>
                <enabled>false</enabled>
            </snapshots>
            <id>bintray-skapral-oo-maven</id>
            <name>bintray</name>
            <url>http://dl.bintray.com/skapral/oo-maven</url>
        </pluginRepository>
    </pluginRepositories>

    <dependencyManagement>
        <dependencies>
            <dependency>
                <groupId>oo</groupId>
                <artifactId>atom-basis</artifactId>
                <version>${atom.version}</version>
                <classifier>api</classifier>
            </dependency>
            <dependency>
                <groupId>oo</groupId>
                <artifactId>atom-basis</artifactId>
                <version>${atom.version}</version>
                <classifier>tests</classifier>
            </dependency>
        </dependencies>
    </dependencyManagement>

    <build>
        <pluginManagement>
            <plugins>
                <plugin>
                    <groupId>org.codehaus.mojo</groupId>
                    <artifactId>exec-maven-plugin</artifactId>
                    <configuration>
                        <executable>java</executable>
                        <classpathScope>compile</classpathScope>
                        <arguments>
                            <argument>-classpath</argument>
                            <classpath/>
                            <argument>oo.atom.codegen.Main</argument>
                        </arguments>
                    </configuration>
                </plugin>
            </plugins>
        </pluginManagement>
    </build>

    
    <profiles>
        <profile>
            <id>atomize</id>
            <activation>
                <activeByDefault>true</activeByDefault>
            </activation>
            <dependencies>
                <dependency>
                    <groupId>oo</groupId>
                    <artifactId>atom-basis</artifactId>
                    <version>${atom.version}</version>
                    <classifier>api</classifier>
                </dependency>
                <dependency>
                    <groupId>oo</groupId>
                    <artifactId>atom-basis</artifactId>
                    <version>${atom.version}</version>
                    <classifier>codegen</classifier>
                </dependency>
            </dependencies>
            <build>
                <plugins>
                    <plugin>
                        <groupId>org.codehaus.mojo</groupId>
                        <artifactId>exec-maven-plugin</artifactId>
                        <executions>
                            <execution>
                                <id>instrument-prod</id>
                                <phase>process-classes</phase>
                                <goals>
                                    <goal>exec</goal>
                                </goals>
                                <configuration>
                                    <workingDirectory>${basedir}/target/classes</workingDirectory>
                                </configuration>
                            </execution>
                        </executions>
                    </plugin>
                </plugins>
            </build>
        </profile>
        <profile>
            <id>atomizetests</id>
            <activation>
                <activeByDefault>true</activeByDefault>
            </activation>
            <dependencies>
                <dependency>
                    <groupId>oo</groupId>
                    <artifactId>atom-basis</artifactId>
                    <version>${atom.version}</version>
                    <classifier>api</classifier>
                </dependency>
                <dependency>
                    <groupId>oo</groupId>
                    <artifactId>atom-basis</artifactId>
                    <version>${atom.version}</version>
                    <classifier>codegen</classifier>
                </dependency>
            </dependencies>
            <build>
                <plugins>
                    <plugin>
                        <groupId>org.codehaus.mojo</groupId>
                        <artifactId>exec-maven-plugin</artifactId>
                        <executions>
                            <execution>
                                <id>instrument-tests</id>
                                <phase>process-test-classes</phase>
                                <goals>
                                    <goal>exec</goal>
                                </goals>
                                <configuration>
                                    <workingDirectory>${basedir}/target/test-classes</workingDirectory>
                                </configuration>
                            </execution>
                        </executions>
                    </plugin>
                </plugins>
            </build>
        </profile>
    </profiles>
</project>